#!/bin/sh -ex

echo "*\n*\n* building SWIG\n*\n*"
cd @CMAKE_CURRENT_BINARY_DIR@
mkdir -p 3rdparty
cd 3rdparty

wget -c http://pr.willowgarage.com/downloads/SWIG-1.3.29-wx.tar.gz
tar xzf SWIG-1.3.29-wx.tar.gz

cd SWIG-1.3.29
./configure --prefix=@CMAKE_CURRENT_BINARY_DIR@
make
make install

echo "Done."